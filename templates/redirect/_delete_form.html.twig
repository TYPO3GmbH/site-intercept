<form class="d-inline-block" method="post" action="{{ path('admin_redirect_delete', {'id': redirect.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ redirect.id) }}">
    <button class="btn btn-danger" id="redirectformdelete">
        <span class="btn-icon"><i class="fa fa-trash"></i></span>
        <span class="btn-text">Delete</span>
    </button>
</form>
