{% extends 'layout.html.twig' %}
{% import 'macros/macros.html.twig' as macros %}
{% block title %}Edit Documentation Redirect{% endblock %}
{% block headline %}Edit Documentation Redirect{% endblock %}
{% block body %}

    {% frame %}
        <div class="card">
            <div class="card-body">
                {{ form(form) }}
            </div>
        </div>
        <div class="row mt-4 justify-content-between">
            <div class="col-auto">
                {{
                    macros.linkbutton(
                        path('admin_redirect_index'),
                        'back to list',
                        'outline-secondary',
                        'actions-arrow-left'
                    )
                }}
            </div>
            <div class="col-auto">
                {{ form(deleteForm) }}
            </div>
        </div>
    {% endframe %}

{% endblock %}
